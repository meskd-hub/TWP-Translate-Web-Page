{
  "manifest_version": 2,
  "name": "One-Click Page Translator",
  "version": "1.0",
  "description": "Translate any webpage to English with one click.",
  "permissions": [
    "activeTab",
    "https://api.mymemory.translated.net/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Translate Page"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
